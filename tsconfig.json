{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@db-layer/*": ["shared/nodejs/db-layer/*"] // Alias for local development
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ],
  "include": [
    "shared/**/*.json",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ]
}
